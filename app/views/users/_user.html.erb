<div id="<%= dom_id user %>">
  <div><%= link_to image_tag(@profile_photos[user.email]), user %></div>
  <div><%= user.email %></div>
  <% if user.profile %>
    <div><%= user.profile.name %></div>
    <div><%= user.profile.birthday %></div>
  <% end %>

  <% unless current_user.friends.include?(user) %>
    <div>
      <%= button_to 'Add Friend', 
                      friend_requests_path(friend_request: {
                      sender_id: current_user,
                      receiver_id: user }),
                      data: { turbo_confirm: "Are you sure?" } %>
    </div>
  <% end %>
  
  <br>
</div>
